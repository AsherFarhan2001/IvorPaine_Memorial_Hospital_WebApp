    </div>

    <div style="width:50%; height:0%; background-color:#2FA5EB;">
    </div>
    </div>

    <div class="container1">

        <form action="@Url.Action("PatientInfo")" method="post">

            <div class="content">

                <div class="inner">

                    <input class="in" type="text" name="patientID" placeholder="Enter Patient ID..">
                    <input class="search" type="submit" value="Search">
                </div>


                <p>OR</p>



                <div class="inner">
                    <input class="in" type="text" name="patientName" placeholder="Enter Patient Name..">
                    <input class="search" type="submit" value="Search">
                </div>

                <div class="back">
                    <a asp-area="" asp-controller="User" asp-action="Index">RETURN TO MAIN PAGE</a>
                </div>
            </div>
        </form>
    </div>
