    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>

        
        @@media (min-width: 1400px){

  
        .container, .container-lg, .container-md, .container-sm, .container-xl, .container-xxl {
    max-width: 1585px;
    padding: 0px; }}
        
        .container{
            height: 157px;
            width: 1583px;
        }
        .container1 {
            width: 791px;
            height: 472px;
            display: block;
            margin: auto;
            background-color: #2FA5EB;
            box-shadow: 0 3px 10px rgb(0 0 0 / 0.2);
        }

        .inner {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .content {
            padding: 80px 12px;
        }

        .inner .in {
            width: 336px;
            padding: 10px 11px;
            margin: 10px 16px;
        }


        .search {
            width: 132px;
            padding: 11px 12px;
            background-color: crimson;
            border-color: transparent;
        }

        p {
            /* width: 600px; */
            font-size: 50px;
            text-align: center;
            font-family: forte;
            color: #000;
        }

        .back {
            padding: 43px 293px;
        }

            .back a {
                text-decoration: none;
                color: white
            }

                .back a:hover {
                    color: #428bca;
                    border-bottom: 2px solid gray;
                }
    </style>
